<div class="max-w-md mx-auto my-10 bg-white p-8 rounded-lg shadow">
  <h2 class="text-2xl font-bold mb-6 text-center">Criar Conta</h2>
  
  <%= form_with model: @user, url: users_path, method: :post, class: "space-y-4", data: { turbo: false } do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 text-red-600 p-4 rounded mb-4">
        <h3 class="font-medium">Foram encontrados <%= @user.errors.count %> erros:</h3>
        <ul class="list-disc pl-5 mt-2">
          <% @user.errors.each do |error| %>
            <li><%= error.attribute.to_s.humanize %> <%= error.message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>
    
    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>
    
    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>
    
    <div>
      <%= f.submit "Criar Conta", class: "w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2" %>
    </div>
  <% end %>
  
  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600">
      JÃ¡ tem uma conta? <%= link_to "Entrar", login_path, class: "text-green-600 hover:text-green-800" %>
    </p>
  </div>
</div>