<%# app/views/shared/_breadcrumbs.html.erb %>
<% if breadcrumbs.present? %>
  <nav aria-label="Breadcrumb" class="bg-white py-3 px-4 shadow-sm rounded-md mb-4">
    <ol class="flex flex-wrap items-center text-sm text-gray-600">
      <li class="flex items-center">
        <%= link_to root_path, class: "hover:text-green-600 transition-colors duration-200" do %>
          <i class="fas fa-home" aria-hidden="true"></i>
          <span class="sr-only">Início</span>
        <% end %>
      </li>
      
      <% breadcrumbs.each_with_index do |crumb, index| %>
        <li class="flex items-center">
          <span class="mx-2 text-gray-400" aria-hidden="true">/</span>
          <% if index == breadcrumbs.length - 1 %>
            <span class="font-medium text-green-600" aria-current="page"><%= crumb[:name] %></span>
          <% else %>
            <%= link_to crumb[:name], crumb[:url], class: "hover:text-green-600 transition-colors duration-200" %>
          <% end %>
        </li>
      <% end %>
    </ol>
  </nav>
  
  <% 
    # Gerar Schema.org markup para breadcrumbs
    breadcrumb_schema_markup(
      [{name: "Início", url: root_url}] + breadcrumbs
    )
  %>
<% end %>
