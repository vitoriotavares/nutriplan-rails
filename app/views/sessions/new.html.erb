<div class="max-w-md mx-auto my-10 bg-white p-8 rounded-lg shadow">
  <h2 class="text-2xl font-bold mb-6 text-center">Entrar</h2>
  
  <%= form_with url: session_path, method: :post, class: "space-y-4", data: { turbo: false } do |f| %>
    <% if flash[:alert] %>
      <div class="bg-red-50 text-red-600 p-4 rounded mb-4">
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <div>
      <%= f.label :email, t('activerecord.attributes.user.email'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>
    
    <div>
      <%= f.label :password, t('activerecord.attributes.user.password'), class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" %>
    </div>
    
    <div>
      <%= f.submit "Entrar", class: "w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2" %>
    </div>
  <% end %>
  
  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600">
      NÃ£o tem uma conta? <%= link_to "Criar Conta", signup_path, class: "text-green-600 hover:text-green-800" %>
    </p>
  </div>
</div>